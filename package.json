{
  "name": "fezi",
  "version": "0.1.3",
  "private": true,
  "description": "A lightweight fetch wrapper for browser and Node.js",
  "author": "",
  "license": "MIT",
  "keywords": [
    "fetch",
    "http",
    "request",
    "typescript"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=\"./packages/*\"",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "lint": "prettier --check \"packages/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "release": "pnpm dlx bumpp --execute=\"pnpm run release:prepare\" --all",
    "release:prepare": "pnpm run lint && pnpm run test && pnpm run build:packages && pnpm run typecheck",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "packageManager": "pnpm@10.8.1",
  "devDependencies": {
    "@types/node": "^22.15.17",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "turbo": "^1.10.16",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  }
}
